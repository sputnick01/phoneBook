<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text"
                android:layout_marginHorizontal="5dp"
                app:layout_constraintRight_toLeftOf="@id/ic_person"
                tools:ignore="MissingConstraints" />
            <ImageView
                android:id="@+id/ic_person"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_baseline_person_pin_24"
                android:backgroundTint="@color/icon_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintRight_toLeftOf="@id/text_name" />


            <TextView
                android:id="@+id/text_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="phone"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintLeft_toRightOf="@id/ic_phone"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/ic_phone"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_phone"
                android:backgroundTint="@color/icon_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintRight_toLeftOf="@id/text_phone" />

            <TextView
                android:id="@+id/text_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:textColor="@color/black"
                android:textSize="@dimen/size_text"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/ic_email"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/ic_email"
                android:layout_width="@dimen/size_icon"
                android:layout_height="@dimen/size_icon"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_email"
                android:backgroundTint="@color/icon_background"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/text_email" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>